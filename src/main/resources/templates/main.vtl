

<html>
    <div class="Menu_grid"Menu_grid>

        <div class="MainNews"MAINNEWS>
            <h1>TOP STORIES</h1>
            <br>
            #set($counter = 0)
            #foreach($article in $articles)
                <h1>$article.getTitle()</h1>
                <h2>$article.getHeadline()</h2>
                <td>$mostPopularArticles[$counter]</td>
            <a href="/articles/$article.getId()" class="button center"></a>
            <br>

            #set($counter = $counter + 1)
            #end
        </div>

        <div class="SideBar"SIDEBAR>
            <h1>Popular News</h1>
            #foreach($article in $articles)
            <br>
            <h4>$article.getHeadline()</h4>
            <h6>Views: $article.getCounter() by $article.getJournalist().getJournalistName()</h6>
            <h6>Age: </h6>
            #end
        </div>

    </div>
</html>
