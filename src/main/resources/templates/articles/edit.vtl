<h2>Edit $article.getTitle() Article</h2>
<form action="/articles/edit/$article.getId()" method="post">
    <label for="title">Title:</label>
    <br>
    <textarea rows ="1" cols="80" type="text" class="inputbox" name="title" required="true" value="$article.getTitle()">$article.getTitle()</textarea>
    <br>
    <label for="title">Headline:</label>
    <br>
    <textarea rows ="2" cols="80" type="text" class="inputbox" name="headline" required="true" value="$article.getHeadline()">$article.getHeadline()</textarea>
    <br>
    <label for="title">Content:</label>
    <br>
    <textarea rows ="25" cols="80" type="text" class="inputbox" name="content" required="true" value="$article.getContent()">$article.getContent()</textarea>
    <br>

    <label for="journalist">Journalist:</label>
    <select id="journalist" name="journalist" >

        #foreach( $journalist in $journalists )

    <option value="$journalist.getId()"
            #if ($journalist.getId() == $article.getJournalistName().getId())
            selected="selected"
            #end>
        $journalist.getJournalistName()</option>
        #end
    </select>
    <label for="category">Category:</label>
    <select id="category" name="category">
        #foreach( $category in $categories )
        <option value="$category.getId()"
                #if ($category.getId() == $article.getCategoryName().category.getId())
                selected="selected"
                #end>
            $category.getCategoryName()</option>
        #end
    </select>
    <label for="location">Location:</label>
    <select id="location" name="location">
        #foreach( $location in $locations )
        <option value="$location.getId()"
                #if ($location.getId() == $article.getLocationName().location.getId())
                selected="selected"
                #end>
                $location.getLocationName()</option>
        #end
    </select>
    <br><br>
    <input type="submit" value="Save Article" class="button">
</form>


